<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_note"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="25dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/note_favorite_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/favourite_notes"
                app:srcCompat="@drawable/ic_favourite_note_border" />

            <TextView
                android:id="@+id/note_category_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="textEnd"
                android:textSize="8sp"
                tools:text="New Category" />
        </LinearLayout>

        <TextView
            android:id="@+id/note_name_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="24dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textAlignment="center"
            tools:text="My new text My new text My new text My new text " />


    </LinearLayout>
</androidx.cardview.widget.CardView>